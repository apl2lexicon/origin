@page "/checkout"
<Navbar/>
<div class="checkout">
    <div class="items mx-auto d-flex">
        <div class="customer-info d-flex flex-column">
            <div>
                <p>Returning customer? <a href=""><span>Click here to login</span></a></p>
                <p>Have a coupon? <a href=""><span>Click here to enter your code</span></a></p>
            </div>
            <div class="coupon">
                <p>If you have a coupon code, please apply it below.</p>
                <form class="coupon-form">
                    <input class="input-coupon" type="text" placeholder="Coupon code">
                    <input class="input-btn" value="Apply Coupon" type="submit">
                </form>
            </div>
            <div class="billing-details">
                <h5>BILLING DETAILS</h5>
                <form class="billing-form ">
                    <div class="name d-flex">
                        <div class="w-100">
                            <label>First name *</label>
                            <input class=" w-100" type="text" id="first-name">
                        </div>
                        <div class="w-100">
                            <label>Last name *</label>
                            <input class="w-100" type="text" id="last-name">
                        </div>
                    </div>
                    <div class=" ">
                        <div class="w-100">
                            <label>Company name (optional)</label>
                            <input class="w-100" type="text" id="company">
                        </div>
                    </div>
                    <div class=" ">
                        <div class="w-100  flex-column">
                            <label>Country / Region *</label>
                            <select class="w-100" id="Country">
                                <option value="">United States (US)</option>
                                <option value="">........</option>
                                <option value="">........</option>
                                <option value="">........</option>
                            </select>
                        </div>
                    </div>
                    <div class=" ">
                        <div class="w-100">
                            <label>Street address *</label>
                            <input class="w-100" type="text" id="street"
                                   placeholder="House number and street name">
                            <input class="w-100" type="text" id="apartment"
                                   placeholder="Apartment, suite, unit, etc. (optional)">
                        </div>
                    </div>
                    <div class=" ">
                        <div class="w-100">
                            <label>Town / City *</label>
                            <input class="w-100" type="text" id="city"
                                   placeholder="House number and street name">
                        </div>
                    </div>
                    <div class=" ">
                        <div class="w-100">
                            <label>State *</label>
                            <input class="w-100" type="text" id="state" placeholder="Alabama">
                        </div>
                    </div>
                    <div class=" ">
                        <div class="w-100">
                            <label>ZIP *</label>
                            <input class="w-100" type="text" id="zip" pattern="[0-9]">
                        </div>
                    </div>
                    <div class=" ">
                        <div class="w-100">
                            <label>Phone *</label>
                            <input class="w-100" type="text" id="phone">
                        </div>
                    </div>
                    <div class=" ">
                        <div class="w-100">
                            <label>Email address *</label>
                            <input class="w-100" type="email" id="email"
                                   placeholder="House number and street name">
                        </div>
                    </div>
                    <div class="  ">
                        <div class="w-100">
                            <input type="checkbox" id="create-account">
                            <label>Create an account?</label>
                        </div>
                    </div>
                    <hr>
                    <div class=" different-address">
                        <div class=" ">
                            <input type="checkbox" id="different-address">
                            <label>SHIP TO A DIFFERENT ADDRESS?</label>
                        </div>
                    </div>
                    <div class="">
                        <div class="w-100 d-flex flex-column">
                            <label>Order notes (optional)</label>
                            <textarea id="note"
                                      placeholder="Notes about your order, e.g. special notes for delivery."></textarea>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="d-flex flex-column order align-items-center">
            <div class="title d-flex justify-content-center align-items-center w-100">
                <span>YOUR ORDER</span>
            </div>
            <div class="order-content  w-100">
                <div class="header d-flex">
                    <div class="d-flex justify-content-start align-items-center w-50">
                        PRODUCT
                    </div>
                    <div class="product-price d-flex justify-content-end  align-items-center w-50 ">
                        SUBTOTAL
                    </div>
                </div>

                <div class="product d-flex">
                    <div class="product-name d-flex justify-content-start align-items-center w-50">
                        Women smart high heel shoe
                    </div>
                    <div class="product-price d-flex justify-content-end  align-items-center w-50 ">
                        $380.00
                    </div>
                </div>
                <hr>
                <div class="product d-flex">
                    <div class="product-name d-flex justify-content-start align-items-center w-50">
                        Gents half t-shirt
                    </div>
                    <div class="product-price d-flex justify-content-end  align-items-center w-50 ">
                        $280.00
                    </div>
                </div>
                <hr>
                <div class="subtotal d-flex">
                    <div class="d-flex justify-content-start align-items-center w-50">
                        Subtotal
                    </div>
                    <div class="product-price d-flex justify-content-end  align-items-center w-50 ">
                        660$
                    </div>
                </div>
                <hr>
                <div class="shipping d-flex">
                    <div class="d-flex justify-content-start align-items-center w-50">
                        Shipping
                    </div>
                    <div class="shipping-type d-flex flex-column justify-content-center align-items-end w-50 ">
                        <div>
                            <label>Flate rate: <span>$20.00</span></label><input type="radio" id="flat"
                                                                                 name="shipping" value="Flat-rate:">
                        </div>
                        <div>
                            <label>Free shipping</label><input type="radio" id="free" name="shipping"
                                                               value="HTML">
                        </div>
                        <div>
                            <label>Local pickup: <span>$25.00</span></label><input type="radio" id="loacl"
                                                                                   name="shipping" value="HTML">
                        </div>
                    </div>
                </div>
                <hr>
                <div class="header d-flex">
                    <div class="d-flex justify-content-start align-items-center w-50">
                        TOTAL
                    </div>
                    <div class="product-price d-flex justify-content-end  align-items-center w-50 ">
                        $620.00
                    </div>
                </div>
                <hr class="end">
                <div>
                    <input type="radio" id="direct-bank" name="payment" value="Flat-rate:"><label class="label-text">Direct bank transfer</label>
                </div>
                <div class="info d-flex justify-content-center align-items-center">
                    Make your payment directly into our bank account. Please use your Order ID as the payment
                    reference. Your order won’t be shipped until the funds have cleared in our account.
                </div>
                <div class="other-payments">
                    <div>
                        <input type="radio" id="check-payment" name="payment" value="Flat-rate:"><label class="label-text">Direct bank transfer</label>
                    </div>
                    <div>
                        <input type="radio" id="cash" name="payment" value="Flat-rate:"><label class="label-text">Cash on delivery</label>
                    </div>
                    <div>
                        <input type="radio" id="paypal" name="payment" value="Flat-rate:"><label class="label-text">PayPal</label>
                        <img src="/images/paypal.png" alt="">
                        <span style="color: #777777;">What is PayPal?</span>
                    </div>
                    <hr>
                    <div class="personal-data w-100 mx-auto">
                        Your personal data will be used to process your order, support your
                        experience throughout this website, and for other purposes described in our <span>privacy policy.</span>
                    </div>
                    <hr>
                    <div class="d-flex flex-row     ">
                        <input type="checkbox" id="agree">
                        <label>I have read and agree to the website <a><span>terms and conditions *</span></a></label>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn-blace-order ">PLACE ORDER</button>
                    </div>

                </div>
                <div></div>
            </div>
        </div>
    </div>
</div>
<Brands/>
<Footer/>
